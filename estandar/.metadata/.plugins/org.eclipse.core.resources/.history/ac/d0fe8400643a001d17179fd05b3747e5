package pruebas;

import java.util.List;

public class Test5 {

	public static void main(String[] args) {
		
		List<String> nombres = List.of("cadena","luz","día","meteoro","bicicleta");
		
		// mostrar el TOTAL DE CARACTERES de CADA NOMBRE
		System.out.println( "¿Cuántos números NEGATIVOS hay?");
		System.out.println(

				nums.stream() // conversión de la LISTA a STREAM
				
				// métodos INTERMEDIOS
				.filter(n -> n<0) // busca los números NEGATIVOS
				.distinct() // eliminna los REPETIDOS
				
				// método FINAL
				.count() // cuento los números

				);

	} // cierre MAIN

}
